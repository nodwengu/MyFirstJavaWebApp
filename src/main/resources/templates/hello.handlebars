<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">    <link rel="stylesheet" href="/css/style.css">

    <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css"
    />

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container jumbotron">
	    <h1 class="mb-3 alignCenter">Greetings with Spark Java</h1>
	    <br> <br>
       <form action="/hello" method="post" >
          <div class="row">
             <div class="col-sm-7">
               <div class="form-group row">
                 <div class="col-sm-8">
                   <label for="exampleInputEmail1">Name</label>
                   <input type="text" class="form-control" name="name" id=""><br>
                   <div>
                      <div class="form-check form-check-inline mr-5">
                        <input class="form-check-input" type="radio" name="language" id="inlineRadio1" value="English">
                        <label class="form-check-label" for="english">English</label>
                      </div>
                      <div class="form-check form-check-inline mr-5">
                        <input class="form-check-input" type="radio" name="language" id="inlineRadio2" value="Xhosa">
                        <label class="form-check-label" for="xhosa">Xhosa</label>
                      </div>
                      <div class="form-check form-check-inline mr-5">
                        <input class="form-check-input" type="radio" name="language" id="inlineRadio3" value="Zulu">
                        <label class="form-check-label" for="zulu">Zulu</label>
                      </div>
                   </div>
                   <br>
                   <button type="submit" class="btn btn-primary">Greet</button>
                   <a href="/reset" class="btn btn-primary">Reset</a>
                   <h3 class="mt-5 alignCenter animate__animated animate__fadeIn">
                      {{greeting}}
                   </h3>
                 </div>
                 <div class="col-sm-4 alignCenter">
						<label for="exampleInputEmail1" class="align-items-center">Greeted</label>
                  <h5><span class="badge badge-primary badge-pill">{{greetedCounter}}</span></h5>
                 </div>
                </div>
                 <div class="alert alert-danger animate__animated animate__fadeIn hide {{showError}}" role="alert">
                     <span class="">{{errorMsg}}</span>
                 </div>
             </div>
             <div class="col-sm-3">
               <ul class="list-group">
                   {{#each usersList}}
                      <li class="list-group-item d-flex justify-content-between align-items-center row">
                        <a href="/greeted/{{this.name}}" class="col-sm-6 greetedName">{{this.name}}</a>
                         <span class="col-sm-6 listBtn">
<!--                           <a href="/" class="btn btn-primary btn-sm editBtn" data-toggle="modal" data-target="#exampleModal{{this.id}}">Edit</a>-->
<!--                           <a href="/" class="btn btn-danger btn-sm removeBtn">Remove</a>-->
                         </span>
                      </li>

                         <!-- Modal -->
                             <div class="modal fade" id="exampleModal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                               <div class="modal-dialog" role="document">
                                 <div class="modal-content">
                                   <div class="modal-header">
                                     <h5 class="modal-title" id="exampleModalLabel">Update Name</h5>
                                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                     </button>
                                   </div>
                                   <div class="modal-body">
                                       <div class="card-body">
                                          <input type="text" class="form-control" name="name" id="" value="{{this.name}}"><br>
                                       </div>
                                   </div>
                                   <div class="modal-footer">
                                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                     <a href="/" type="button" class="btn btn-primary">Update</a>
                                   </div>
                                 </div>
                               </div>
                             </div>
                   {{/each}}
               </ul>
             </div>
       </form>



    </div>

   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>